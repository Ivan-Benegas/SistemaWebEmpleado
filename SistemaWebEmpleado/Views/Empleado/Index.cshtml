@model IEnumerable<SistemaWebEmpleado.Models.Empleado>

@{
    ViewData["Title"] = "Index Empleado";
}

@section SideBar{
    <ul>
        <p>Administracion de empleados</p>
    </ul>
}

@Html.ActionLink("Nuevo", "Create", "Empleado")
<br>
<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        <th>@Html.DisplayNameFor(model => model.Apellido)</th>
        <th>@Html.DisplayNameFor(model => model.DNI)</th>
        <th>@Html.DisplayNameFor(model => model.Legajo)</th>
        <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
        <th>Detalle</th>
        <th>Editar</th>
        <th>Eliminar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.ActionLink(item.Titulo, "GetByTitulo", "Empleado", new{titulo=item.Titulo})
            </td>
            <td>
                @Html.ActionLink("Detalle", "Details", "Empleado", new{id=item.Id})
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", "Empleado", new{id=item.Id})
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", "Empleado", new{id=item.Id})
            </td>
        </tr>
    }

</table>

